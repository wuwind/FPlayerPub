<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/ijk_transparent_dark"
    android:layoutDirection="ltr"
    android:orientation="vertical"
    android:paddingLeft="@dimen/d_40dp"
    android:paddingRight="@dimen/d_40dp"
    android:paddingBottom="@dimen/d_26dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingTop="4dip"
        android:visibility="gone">

        <ImageButton
            android:id="@+id/prev"
            style="@style/MediaButtonCompat.Previous" />

        <ImageButton
            android:id="@+id/rew"
            style="@style/MediaButtonCompat.Rew" />

        <ImageButton
            android:id="@+id/ffwd"
            style="@style/MediaButtonCompat.Ffwd" />

        <ImageButton
            android:id="@+id/next"
            style="@style/MediaButtonCompat.Next" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/pause"
            style="@style/MediaButtonCompat.Play"
            android:layout_width="@dimen/d_80dp"
            android:layout_height="@dimen/d_80dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/d_10dp"
            android:gravity="center"
            android:scaleType="fitXY" />

        <TextView
            android:id="@+id/time_current"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="top"
            android:paddingStart="4dip"
            android:paddingLeft="4dip"
            android:paddingTop="4dip"
            android:paddingEnd="4dip"
            android:paddingRight="4dip"
            android:text="00:00"
            android:textColor="@color/dim_foreground_dark"
            android:textSize="14sp" />

        <SeekBar
            android:id="@+id/mediacontroller_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center" />

        <TextView
            android:id="@+id/time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="top"
            android:paddingStart="4dip"
            android:paddingLeft="4dip"
            android:paddingTop="4dip"
            android:paddingEnd="4dip"
            android:paddingRight="4dip"
            android:text="23:23"
            android:textColor="@color/dim_foreground_dark"
            android:textSize="14sp" />

    </LinearLayout>

</LinearLayout>